{
  "name": "prepareprojectforllmprompt",
  "displayName": "PrepareProjectForLLMPrompt",
  "description": "Automatically prepares and formats small code projects for input into language models.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.prepareForLLM"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.prepareForLLM",
        "title": "Prepare for LLM"
      }
    ],
    "configuration": {
      "properties": {
        "prepareForLLM.exclusions": {
          "type": "array",
          "default": [
            "node_modules",
            ".git"
          ],
          "description": "Folders or files to exclude."
        },
        "prepareForLLM.fileTypeFilter": {
          "type": "array",
          "default": [
            ".js",
            ".ts",
            ".py"
          ],
          "description": "File types to include."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p ./ --outDir ./dist/test",
    "watch-tests": "tsc -p ./ -w --outDir ./dist/test",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "~16.18.52",
    "@types/sinon": "^10.0.16",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.49.0",
    "glob": "^10.3.4",
    "mocha": "^10.2.0",
    "sinon": "^16.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.7"
  }
}
